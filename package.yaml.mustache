# This YAML file describes your package. Stack will automatically generate a
# Cabal file when you run `stack build`. See the hpack website for help with
# this file: <https://github.com/sol/hpack>.

name: {{name}}
version: '0.0.0'
synopsis: {{desc}}
category: Other
description: {{desc}}
maintainer: {{author}}
license: MIT

dependencies:
  - base

executables:
  {{name}}:
    dependencies:
    - {{name}}
    ghc-options:
    - -rtsopts
    - -threaded
    - -with-rtsopts=-N
    - -Wall
    main: Main.hs
    source-dirs: app
    extra-source-files:
    - CHANGELOG.md
    - LICENSE.md
    - package.yaml
    - README.md
    - stack.yaml

library:
  dependencies:
  - aeson
  - async
  - bytestring
  - configurator
  - containers
  - data-default
  - esqueleto
  - lens
  - mtl
  - monad-logger
  - nejla-common
  - persistent
  - persistent-postgresql
  - persistent-template
  - servant-server
  - text
  - time
  - unix
  - wai
  - wai-extra
  - warp
  - unordered-containers
  source-dirs: src

tests:
  {{name}}-test-suite:
    dependencies:
    - {{name}}
    - tasty
    - tasty-hspec
    ghc-options:
    - -rtsopts
    - -threaded
    - -with-rtsopts=-N
    main: Main.hs
    source-dirs: test-suite

benchmarks:
  {{name}}-benchmarks:
    dependencies:
    - {{name}}
    - criterion
    ghc-options:
    - -rtsopts
    - -threaded
    - -with-rtsopts=-N
    main: Main.hs
    source-dirs: benchmark
